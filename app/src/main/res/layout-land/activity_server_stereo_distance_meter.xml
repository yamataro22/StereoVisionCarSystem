<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServerStereoDistanceMeter"
    android:id="@+id/server_stereo_xml">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <org.opencv.android.JavaCameraView
            android:id="@+id/self_server_camera_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_marginTop="24dp"
            android:layout_weight="20"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/connect_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/skip_frames_button"
                    android:layout_alignParentRight="true"
                    android:layout_margin="1dp"
                    android:text="Conn" />

                <TextView
                    android:id="@+id/connection_status_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="no conn" />

                <Button
                    android:id="@+id/skip_frames_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="1dp"
                    android:text="Skip" />

            </LinearLayout>

            <ImageView
                android:id="@+id/serwer_camera_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/distance_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00070916"
                android:focusableInTouchMode="false"
                android:text="no dist"
                android:textAlignment="center"
                android:textAllCaps="false" />

            <ImageView
                android:id="@+id/disparity_camera_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>